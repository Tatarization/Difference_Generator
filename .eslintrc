{
    "env": {
        "node": true,
        "es2020": true
    },
    "extends": ["airbnb/base", "plugin:jest/recommended"],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
		"import/extensions": [0, { "js": "always" }],
		"import/prefer-default-export": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "no-tabs": "off",
        "indent": ["off", "tabs"],
        "no-underscore-dangle": [2, { "allow": ["__filename", "__dirname"] }]
    }
}